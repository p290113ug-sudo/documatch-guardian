{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Audit Log",
    "type": "object",
    "properties": {
        "log_id": {
            "type": "string",
            "format": "uuid"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "user_id": {
            "type": "string"
        },
        "action": {
            "type": "string"
        },
        "invoice_id": {
            "type": "string"
        },
        "result": {
            "type": "string"
        },
        "details": {
            "type": "object"
        },
        "ip_address": {
            "type": "string"
        },
        "user_agent": {
            "type": "string"
        }
    },
    "required": [
        "timestamp",
        "action"
    ]
}