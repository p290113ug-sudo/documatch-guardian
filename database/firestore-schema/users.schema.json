{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "User",
    "type": "object",
    "properties": {
        "uid": {
            "type": "string"
        },
        "email": {
            "type": "string",
            "format": "email"
        },
        "display_name": {
            "type": "string"
        },
        "organization_id": {
            "type": [
                "string",
                "null"
            ]
        },
        "role": {
            "type": "string",
            "enum": [
                "admin",
                "editor",
                "viewer"
            ]
        },
        "status": {
            "type": "string",
            "enum": [
                "active",
                "disabled"
            ]
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "last_login": {
            "type": "string",
            "format": "date-time"
        }
    },
    "required": [
        "uid",
        "email"
    ]
}